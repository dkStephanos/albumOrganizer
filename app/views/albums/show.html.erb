<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= render partial: "album_data", locals: {album: @album} %>

<%= render partial: "song_list", locals: {album: @album} %>
    
<br></br>
    
    <% if user_album?(@album) %>
        <div class="options">
            <%= link_to "Add Song", new_album_song_path(@album) %>
            <%= link_to "Edit Album", edit_artist_album_path(@album.artist, @album) %>
            <%= link_to "Delete Album", album_path(@album), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
        </div>
    <% end %>
    


<br></br>

<div class="links">
    <%= link_to "Back to Artist", artist_path(@album.artist) %>
    <%= link_to "Back to User", user_path(current_user) %>
</div>